<% if item.inventory > 0 %>
  <div class="col-sm-6 col-md-4 ">
    <div class="thumbnail">
      <!--<img src="<%#= item.img_src%>">-->
      <div class="caption">
        <h3><%= link_to item.name, item_path(item) %></h3>
        <!-- <button type="button" id="js-description" class="btn btn-link" data-id="<%#=item.id%>">&or;</button> -->
        <p id="description-<%=item.id%>"></p>
        <div class="green"><h3><%= number_to_currency(item.price)%></h3></div>
        <p><%= button_to 'Add to Cart', line_items_path(item_id: item),  class:"btn btn-primary" %></p>
      </div>
    </div>
  </div>
<% end %>
